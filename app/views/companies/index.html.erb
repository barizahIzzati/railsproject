<h1>Company</h1> <br>

<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>COMPANY NAME</th>
      <th>REGISTER NO</th>
      <th>ADDRESS</th>
      <th>CITY</th>
      <th>STATE</th>
      <th>POSTCODE</th>
      <th>PHONE NO</th>
      <th>FAX</th>
      <th>EMIAL</th>
      <th>WEBSITE</th>
      <th colspan="3">ACTION</th>
    </tr>
  </thead>

  <tbody>
    <% current_user.companies.each do |company| %>
      <tr>
        <td><%= company.id %></td>
        <td><%= company.company_name %></td>
        <td><%= company.register_no %></td>
        <td><%= company.address %></td>
        <td><%= company.city %></td>
        <td><%= company.state %></td>
        <td><%= company.postcode %></td>
        <td><%= company.phone_no %></td>
        <td><%= company.fax %></td>
        <td><%= company.email %></td>
        <td><%= company.website %></td>
        <td><%= link_to 'Show', company %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path %>
