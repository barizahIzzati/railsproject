<h1>Company</h1> <br>

<table>
  <thead>
    <tr>
      <th>Company Name</th>
      <th>Register No</th>
      <th>Address</th>
      <th>City</th>
      <th>State</th>
      <th>Postcode</th>
      <th>Phone No</th>
      <th>Fax</th>
      <th>Email</th>
      <th>Website</th>
      <th colspan="3">Action</th>
    </tr>
  </thead>

  <tbody>
    <% current_user.companies.each do |company| %>
      <tr>
        <td><%= company.company_name %></td>
        <td><%= company.register_no %></td>
        <td><%= company.address %></td>
        <td><%= company.city %></td>
        <td><%= company.state %></td>
        <td><%= company.postcode %></td>
        <td><%= company.phone_no %></td>
        <td><%= company.fax %></td>
        <td><%= company.email %></td>
        <td><%= company.website %></td>
        <td><%= link_to 'Show', company %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Company', new_company_path %>
