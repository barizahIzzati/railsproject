<%= simple_form_for @product, :html => { :multipart => true} do |f| %>
  
  <%= f.input :product_name %>
  <p><b>Category</b> <br> <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a Category") %>
  <%= f.input :brand %>
  <%= f.input :picture %>
  <%= f.input :price %>
  <%= f.input :stock %>
  <%= f.input :descrption %>
  <p><b>Status</b> <br> <%= select_tag(:status_id, options_for_select(@statuses), :prompt => "Select a Status") %><br>
  <%= f.submit %>

<% end %>
